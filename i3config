# resize window (you can also use the mouse for that)
mode "resize" {
	# These bindings trigger as soon as you enter the resize mode

	# Pressing left will shrink the window’s width.
	# Pressing right will grow the window’s width.
	# Pressing up will shrink the window’s height.
	# Pressing down will grow the window’s height.
	bindsym h resize shrink width 10 px or 10 ppt
	bindsym j resize grow height 10 px or 10 ppt
	bindsym k resize shrink height 10 px or 10 ppt
	bindsym l resize grow width 10 px or 10 ppt

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

set $Locker xautolock -locknow

# set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate
mode "$mode_system" {
	bindsym l exec --no-startup-id $Locker, mode "default"
	bindsym e exec --no-startup-id i3-msg exit, mode "default"
	bindsym s exec --no-startup-id $Locker && pm-suspend, mode "default"
	bindsym h exec --no-startup-id $Locker && pm-hibernate, mode "default"
	# bindsym r exec --no-startup-id systemctl reboot, mode "default"
	# bindsym Shift+s exec --no-startup-id systemctl shutdown, mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+Pause mode "$mode_system"
bindsym $mod+End mode "$mode_system"

bindsym $mod+Delete exec --no-startup-id $Locker

# bind volume keys
bindsym XF86AudioLowerVolume exec pamixer --decrease 1 && pkill -RTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume exec pamixer --increase 1 && pkill -RTMIN+10 i3blocks
bindsym XF86MonBrightnessDown exec xbacklight -dec 1
bindsym XF86MonBrightnessUp exec xbacklight -inc 1
bindsym XF86AudioMute exec pamixer --toggle-mute && pkill -RTMIN+10 i3blocks
bindsym XF86TouchpadToggle exec --no-startup-id ~/.dotfiles/bin/toggle-touchpad

# media key fixes for spotify
bindsym XF86AudioPlay exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
bindsym XF86AudioNext exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
bindsym XF86AudioPrev exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

