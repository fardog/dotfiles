set $mod Mod4

# set all mouse inputs to be left handed
input * left_handed enabled
# enable compose key on right alt
input * xkb_options compose:ralt

# hide mouse at sensible times
seat * hide_cursor 4000
seat * hide_cursor when-typing enable

##################
# screen layouts #
##################
# by default, ensure laptop monitor is enabled
output eDP-1 enable
# home office layout
bindsym $mod+Mod1+h output * enable; output eDP-1 pos 2560 170; output DP-3 pos 0 0; output DP-2 pos 340 1440;
# laptop layout
bindsym $mod+Mod1+l output * disable; output eDP-1 enable; output eDP-1 pos 0 0;

##########
# colors #
##########
set $color_primary_bg   #8864cb
set $color_primary_fg   #e6e1ea
set $color_primary_ac   #8864cb
set $color_prim_mt_bg   #c7a3fd
set $color_prim_mt_fg   #9c78c2
set $color_prim_mt_ac   #c7a3fd
set $color_secondary_bg #5a5575
set $color_secondary_fg #c0bbdb
set $color_secondary_ac #333333
set $color_second_mt_bg #293740
set $color_second_mt_fg #eeeeee
set $color_second_mt_ac #333333
set $color_tertiary_bg  #1e1d22
set $color_tertiary_fg  #888888
set $color_tertiary_ac  #333333
set $color_urgent_bg    #ffa3c3
set $color_urgent_fg    #ffffff
set $color_urgent_ac    #ffa3c3
set $color_divider      #666666
set $color_flood        #282634

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
# chose a FreeType font, such as:
font pango:DejaVu Sans Mono 10

# class                 border              backgr.             text                indicator
client.focused          $color_primary_ac   $color_primary_bg   $color_primary_fg   #94c4e5
client.focused_inactive $color_secondary_ac $color_secondary_bg $color_secondary_fg #94c4e5
client.unfocused        $color_tertiary_ac  $color_tertiary_bg  $color_tertiary_fg  #292d2e
client.urgent           $color_urgent_ac    $color_urgent_bg    $color_urgent_fg    #e5543f
client.placeholder      #000000 #0c0c0c #ffffff #000000

output * background $color_flood solid_color

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec alacritty
bindsym $mod+Shift+Return exec alacritty --class="floating"

# TODO: this doesn't work right in sway
for_window [class="Alacritty" instance="floating"] floating enable
for_window [class="Alacritty" instance="floating"] resize set 1082 602
# for_window [class="Firefox"] border none

# TODO: this doesn't work right in sway
bindsym $mod+Shift+u exec gpick --name=floating --class=gpick
for_window [class="gpick" instance="floating"] floating enable
for_window [class="gpick" instance="floating"] resize set 700 400

# kill focused window
bindsym $mod+Shift+q kill

# set default layout to stacking
workspace_layout stacking

# allow a press of the same workspace switcher to switch back to the previous
# workspace
workspace_auto_back_and_forth yes

# disable focus follows mouse since it plays badly with intellij
focus_follows_mouse no

#############
# launchers #
#############
bindsym $mod+d exec dmenu_run -nb '$color_secondary_bg' -nf '$color_secondary_fg' -sb '$color_primary_bg' -sf '$color_primary_fg'

# dmenu network manager
bindsym $mod+o exec networkmanager_dmenu 

# dmenu snippet manager
bindsym $mod+q exec /home/nwittstock/.dotfiles/bin/snippy

# dmenu emoji picker
bindsym $mod+a exec /home/nwittstock/.dotfiles/bin/emojipick

# TODO: no flameshot in sway
bindsym $mod+p exec flameshot screen
bindsym --release $mod+shift+p exec flameshot gui

# window marks
# TODO: not working in sway for obvious reasons
bindsym $mod+m exec i3-input -F 'mark %s' -P 'Mark name: '
bindsym $mod+Shift+m exec i3-input -F '[con_mark=%s] focus' -P 'Go to mark: '

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+u focus tiling
bindsym $mod+i focus parent
bindsym $mod+y focus floating

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus urgent
bindsym $mod+x [urgent=latest] focus

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# move workspace to a new output
bindsym Control+$mod+h move workspace to output left
bindsym Control+$mod+j move workspace to output down
bindsym Control+$mod+k move workspace to output up
bindsym Control+$mod+l move workspace to output right

# split in horizontal orientation
bindsym $mod+backslash split h
# split in vertical orientation
bindsym $mod+quotedbl split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# dunst
bindsym Control+space exec dunstctl close
# TODO: conflicts with alacritty
# bindsym Control+Shift+space exec dunstctl close-all
bindsym Control+Shift+grave exec dunstctl history-pop
bindsym Control+Shift+period exec dunstctl context

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit sway
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'

mode "resize" {
	bindsym h resize shrink width 10 px or 10 ppt
	bindsym j resize grow height 10 px or 10 ppt
	bindsym k resize shrink height 10 px or 10 ppt
	bindsym l resize grow width 10 px or 10 ppt

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

set $Locker swaylock -f -c 000000

bindsym $mod+Pause mode "$mode_system"
bindsym $mod+End mode "$mode_system"

bindsym $mod+Delete exec --no-startup-id $Locker

# bind volume keys
bindsym XF86AudioLowerVolume exec pamixer --decrease 1 && pkill -RTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume exec pamixer --increase 1 && pkill -RTMIN+10 i3blocks
bindsym XF86MonBrightnessDown exec light -U 5
bindsym XF86MonBrightnessUp exec light -A 5
bindsym XF86AudioMute exec pamixer --toggle-mute && pkill -RTMIN+10 i3blocks

# media key fixes for spotify
bindsym XF86AudioPlay exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
bindsym XF86AudioNext exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
bindsym XF86AudioPrev exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

# bind monitor layouts
# bindsym $mod+Mod1+h exec --no-startup-id ~/.dotfiles/screen_layouts/home-desk.sh
# bindsym $mod+Mod1+w exec --no-startup-id ~/.dotfiles/screen_layouts/work-desk.sh
# bindsym $mod+Mod1+l exec --no-startup-id ~/.dotfiles/screen_layouts/laptop.sh

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	status_command SCRIPT_DIR=/usr/lib/i3blocks i3blocks
	# wheel_up_cmd nop
	# wheel_down_cmd nop
	
	colors {
		background $color_secondary_bg
		statusline $color_secondary_fg
		separator  $color_divider

		# class            border  backgr. text
		focused_workspace  $color_prim_mt_bg   $color_prim_mt_bg   $color_prim_mt_fg
		active_workspace   $color_second_mt_bg $color_second_mt_bg $color_second_mt_fg
		inactive_workspace $color_secondary_bg $color_secondary_bg $color_secondary_fg
		urgent_workspace   $color_urgent_bg    $color_urgent_bg    $color_urgent_fg
	}
}

# Run some commands at startup
exec --no-startup-id swayidle -w \
  timeout 300 'swaylock -f -c 000000' \
  timeout 600 'swaymsg "output * dpms off"' \
       resume 'swaymsg "output * dpms on"' \
  before-sleep 'swaylock -f -c 000000'
exec --no-startup-id xsettingsd
exec --no-startup-id dropbox start
exec --no-startup-id dunst
exec --no-startup-id nm-applet --indicator
exec --no-startup-id blueman-applet
exec --no-startup-id blueberry-tray
exec --no-startup-id redshift-gtk

# Kill system beep
exec --no-startup-id xset -b
# Gnome Auth Agent
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id dex -ae sway
