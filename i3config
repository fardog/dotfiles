bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
	# These bindings trigger as soon as you enter the resize mode

	# Pressing left will shrink the window’s width.
	# Pressing right will grow the window’s width.
	# Pressing up will shrink the window’s height.
	# Pressing down will grow the window’s height.
	bindsym h resize shrink width 10 px or 10 ppt
	bindsym j resize grow height 10 px or 10 ppt
	bindsym k resize shrink height 10 px or 10 ppt
	bindsym l resize grow width 10 px or 10 ppt

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

set $Locker xautolock -locknow

# set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate
mode "$mode_system" {
	bindsym l exec --no-startup-id $Locker, mode "default"
	bindsym e exec --no-startup-id i3-msg exit, mode "default"
	bindsym s exec --no-startup-id $Locker && pm-suspend, mode "default"
	bindsym h exec --no-startup-id $Locker && pm-hibernate, mode "default"
	# bindsym r exec --no-startup-id systemctl reboot, mode "default"
	# bindsym Shift+s exec --no-startup-id systemctl shutdown, mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+Pause mode "$mode_system"
bindsym $mod+End mode "$mode_system"

bindsym $mod+Delete exec --no-startup-id $Locker

# bind volume keys
bindsym XF86AudioLowerVolume exec ponymix decrease 5
bindsym XF86AudioRaiseVolume exec ponymix increase 5
bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86AudioMute exec $(ponymix | grep Muted > /dev/null && ponymix unmute > /dev/null) || ponymix mute > /dev/null
bindsym XF86TouchpadToggle exec --no-startup-id ~/.dotfiles/bin/toggle-touchpad

# bind mouse swappers
bindsym $mod+comma exec --no-startup-id ~/.dotfiles/bin/left-handed-mouse
bindsym $mod+period exec --no-startup-id ~/.dotfiles/bin/right-handed-mouse

# bind restarting xcape since it fails all the time
bindsym $mod+Shift+x exec --no-startup-id ~/.dotfiles/bin/restart-xcape

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	status_command i3status
	wheel_up_cmd nop
	wheel_down_cmd nop

	colors {
		background #000000
		statusline #bbbbbb
		separator #666666

		# class            border  backgr. text
		focused_workspace  #638399 #526d7f #ffffff
		active_workspace   #333333 #293740 #ffffff
		inactive_workspace #333333 #222222 #888888
		urgent_workspace   #ff5e46 #bf4634 #ffffff
	}
}

# Run some commands at startup

# Make Super_L (caps on my keyboard) act as escape on short press
exec --no-startup-id xcape -e 'Super_L=Escape'
exec --no-startup-id xmodmap ~/.dotfiles/xmodmap/left-handed-mouse
# Autoconfigure attached monitors
exec --no-startup-id srandrd ~/.dotfiles/bin/xrandr-activate-display
# Disable the trackpad while typing
exec --no-startup-id syndaemon -i 0.1 -d -k
exec --no-startup-id compton -b
exec --no-startup-id xautolock -time 10 -detectsleep -locker /home/nwittstock/.dotfiles/bin/lock.sh
exec --no-startup-id dropbox start
exec --no-startup-id nm-applet
exec --no-startup-id dunst
# Kill system beep
exec --no-startup-id xset -b
