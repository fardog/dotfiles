[user]
	name = fardog 
	email = nate@milkandtang.com
[core]
	excludesfile = ~/.dotfiles/gitignore_global
	filemode = false
	editor = vim
[github]
	user = fardog
	token = !cat ~/.github_token 2>&1 >/dev/null
[diff]
	tool = forcefailure
[difftool]
	prompt = false
[merge]
	tool = diffconflicts
[mergetool "diffconflicts"]
	cmd = diffconflicts $EDITOR $BASE $LOCAL $REMOTE $MERGED
	trustExitCode = true
	keepBackup = false
[alias]
	edit = !$(echo $EDITOR) $(git status --short | awk '$1 ~ /^M|A|U/ {print $2}' )
[format]
	pretty = oneline
