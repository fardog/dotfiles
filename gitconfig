[user]
	name = fardog 
	email = nat@fardog.io
[core]
	excludesfile = ~/.dotfiles/gitignore_global
	filemode = false
	autocrlf = input
[github]
	user = fardog
	token = !cat ~/.github_token 2>&1 >/dev/null
[diff]
	tool = forcefailure
[difftool]
	prompt = false
[merge]
	tool = diffconflicts
[mergetool "diffconflicts"]
	cmd = diffconflicts $EDITOR $BASE $LOCAL $REMOTE $MERGED
	trustExitCode = true
	keepBackup = false
[alias]
	edit = !$(echo $EDITOR) $(git status --short | awk '$1 ~ /^M|A|U/ {print $2}' )
[format]
	pretty = oneline
[commit]
	gpgsign = true
[init]
	defaultBranch = main
[gpg]
	format = ssh
[include]
	path = ~/.gitconfig_local
[url "https://invent.kde.org/"]
	insteadOf = kde:
[url "ssh://git@invent.kde.org/"]
	pushInsteadOf = kde:
