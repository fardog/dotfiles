// Place your settings in this file to overwrite the default settings
{
  "editor.fontSize": 13,
  "editor.fontFamily": "'DejaVu Sans Mono'",
  "editor.rulers": [80, 120],
  "editor.tabSize": 2,
  "editor.bracketPairColorization.enabled": true,
  "workbench.editor.showTabs": "single",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "emmet.excludeLanguages": ["markdown", "typescriptreact"],

  "workbench.colorCustomizations": {
    // "list.focusHighlightForeground": "#ffb8d1",
    // "quickInputList.focusForeground": "#ffb8d1",
    "quickInputList.focusBackground": "#8077A8"
    // "editorSuggestWidget.selectedForeground": "#ffb8d1"
  },

  "files.insertFinalNewline": true,
  "files.associations": {
    "*.ract": "handlebars"
  },
  "files.exclude": {
    ".vscode/": true,
    "mypy_cache/": true
  },

  "window.menuBarVisibility": "toggle",
  "window.restoreWindows": "none",

  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "b", "p"],
      "commands": [
        { "command": "workbench.action.openPreviousEditorFromHistory" }
      ]
    },
    {
      "before": ["<leader>", "k", "b"],
      "commands": [{ "command": "workbench.action.toggleSidebarVisibility" }]
    },
    {
      "before": ["<leader>", "v", "g"],
      "commands": [{ "command": "workbench.view.scm" }]
    },
    {
      "before": ["<leader>", "v", "s"],
      "commands": [{ "command": "workbench.view.search" }]
    },
    {
      "before": ["<leader>", "v", "e"],
      "commands": [{ "command": "workbench.view.explorer" }]
    },
    {
      "before": ["<leader>", "v", "d"],
      "commands": [{ "command": "workbench.view.debug" }]
    },
    {
      "before": ["<leader>", "v", "x"],
      "commands": [{ "command": "workbench.view.extensions" }]
    },
    {
      "before": ["<leader>", "k", "a"],
      "commands": [
        { "command": "workbench.action.toggleActivityBarVisibility" }
      ]
    },
    {
      "before": ["<leader>", "k", "r"],
      "commands": [{ "command": "workbench.action.openRecent" }]
    },
    {
      "before": ["<leader>", "w", "k"],
      "commands": [{ "command": "workbench.action.closeActiveEditor" }]
    },
    {
      "before": ["<leader>", "b", "s"],
      "commands": [{ "command": "extension.openScratchpad" }]
    },
    {
      "before": ["<leader>", "e", "n"],
      "commands": [{ "command": "editor.action.marker.next" }]
    },
    {
      "before": ["<leader>", "e", "p"],
      "commands": [{ "command": "editor.action.marker.prev" }]
    },
    {
      "before": ["<leader>", "/"],
      "commands": [{ "command": "workbench.action.splitEditor" }]
    },
    {
      "before": ["g", "D"],
      "commands": ["editor.action.revealDefinitionAside"]
    },
    {
      "before": ["<C-w>", "L"],
      "commands": ["workbench.action.moveActiveEditorGroupRight"]
    },
    {
      "before": ["<C-w>", "H"],
      "commands": ["workbench.action.moveActiveEditorGroupLeft"]
    },
    {
      "before": ["<C-w>", "K"],
      "commands": ["workbench.action.moveActiveEditorGroupUp"]
    },
    {
      "before": ["<C-w>", "J"],
      "commands": ["workbench.action.moveActiveEditorGroupDown"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["g", "q"],
      "commands": [{ "command": "rewrap.rewrapComment" }]
    }
  ],
  "vim.enableNeovim": false,
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-l>": false,
    "<C-space>": false,
    "<C-shift-e>": false,
    "<C-shift-g>": false,
    "<C-`>": false,
    "<Shift-Escape>": false
  },

  "editor.minimap.enabled": false,
  "gitlens.codeLens.enabled": false,
  "extensions.ignoreRecommendations": true,
  "workbench.startupEditor": "newUntitledFile",
  "telemetry.enableTelemetry": false,
  "cSpell.userWords": [
    "DOTPATHS",
    "Serde",
    "Templating",
    "changeset",
    "deserialize",
    "dotpath",
    "proto",
    "protobuf",
    "protobufs",
    "rtype",
    "talby",
    "templated",
    "templatized",
    "unicast",
    "wittstock"
  ],
  "window.titleBarStyle": "native",
  "editor.gotoLocation.multiple": "goto",
  "terminal.integrated.shellArgs.linux": ["-i"],
  "remote.containers.defaultExtensions": [
    "eamodio.gitlens",
    "kaiwood.center-editor-window",
    "skattyadz.vscode-quick-scope",
    "stkb.rewrap",
    "streetsidesoftware.code-spell-checker",
    "sysoev.vscode-open-in-github"
  ],
  "task.slowProviderWarning": ["typescript"],
  "git.autofetch": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.colorTheme": "Witch Hazel Hypercolor",
  "editor.cursorStyle": "line",
  "editor.insertSpaces": true,
  "editor.lineNumbers": "on",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",

  /**
   * language settings
   */

  "python.showStartPage": false,
  "python.languageServer": "Pylance",
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.rulers": [79],
    "editor.formatOnSave": true
  },

  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  "[typescript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  "[rust]": {
    "editor.formatOnSave": true
  },

  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },

  "[json]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[postcss]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "cmake.configureOnOpen": true,
  "go.toolsManagement.autoUpdate": true,
  "redhat.telemetry.enabled": false,
  "git.openRepositoryInParentFolders": "never",
  "workbench.editor.empty.hint": "hidden",
  "workbench.activityBar.location": "hidden",

  "jest.autoRun": {}
}
