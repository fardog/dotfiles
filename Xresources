! Compile xft: Attempt to find a visual with the given bit depth; option -depth.
URxvt*depth: 32

! back/foreground
URxvt*background: black
URxvt*foreground: white

! black dark/light
URxvt*color0: black
URxvt*color8: grey50
! red dark/light
URxvt*color1: red3
URxvt*color9: red
! green dark/light
URxvt*color2: green3
URxvt*color10: green
! yellow dark/light
URxvt*color3: yellow3
URxvt*color11: yellow
! blue dark/light
URxvt*color4: rgb:44/44/ff
URxvt*color12: rgb:5c/5c/ff
! magenta dark/light
URxvt*color5: magenta3
URxvt*color13: magenta
! cyan dark/light
URxvt*color6: cyan3
URxvt*color14: cyan
! white dark/light
URxvt*color7: gray90
URxvt*color15: white

! Fade the text by the given percentage when focus is lost
URxvt*fading: 15

! Fonts
URxvt*font: xft:DejaVuSansMono:size=10
URxvt*boldFont: xft:DejaVuSansMono-Bold:size=10
URxvt*italicFont: xft:DejaVuSansMono-Oblique:size=10
URxvt*boldItalicFont: xft:DejaVuSansMono-BoldOblique:size=10

! Intensity something I guess. Looks better it seems?
URxvt*intensityStyles: false

! Disable the scrollbar
URxvt*scrollBar: false

! Maximum scrollback
URxvt*saveLines: 65535

! Compile frills: Use fancy font features
URxvt*skipBuiltinGlyphs: true

! Set urgent hint
URxvt*urgentOnBell: true

! Blank pointer on typing
URxvt*pointerBlank: true

! do not scroll with output
URxvt*scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

! keyboard selection
URxvt.perl-ext-common:      default,clipboard,url-select,keyboard-select
URxvt.url-select.launcher:  chromium
URxvt.url-select.underline: true
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search

! better copy/paste
URxvt.iso14755: false
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.clipboard.autocopy: true
URxvt.clipboard.copycmd:  xclip -i -selection clipboard
URxvt.clipboard.pastecmd: xclip -o -selection clipboard

#include "/home/nwittstock/.Xresources.box"
