#!/bin/bash

DEFAULT_MODE_NAME='default'
DND_MODE_NAME='do-not-disturb'

status() {
  makoctl mode | grep $DND_MODE_NAME 2>&1 > /dev/null
  if [ $? -eq 0 ]
  then
    echo "❌"
    echo "Notifications: Off"
  else
    echo "⭕"
    echo "Notifications: On"
  fi
}

toggle() {
  current_mode=$(makoctl mode)
  if [ "$current_mode" = "$DEFAULT_MODE_NAME" ]
  then
    makoctl mode -s $DND_MODE_NAME 2>&1 > /dev/null
  else
    makoctl mode -s $DEFAULT_MODE_NAME 2>&1 > /dev/null
  fi
}

# Check if at least 1 positional parameters are provided
if [ $# -lt 1 ]
then
  echo "Usage: $0 (status|toggle)"
  exit 1
fi

case $1 in
  "status")
    status
    exit 0
    ;;
  "toggle")
    toggle
    status
    exit 0
    ;;
esac

echo "invalid operation $1"
exit 1
